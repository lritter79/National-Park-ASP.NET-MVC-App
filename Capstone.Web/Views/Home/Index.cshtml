@model NationalPark

@{
    ViewData["Title"] = "Home Page";
}

<section class="centeredPanel">
    <h2>National Park Geek</h2>

    @foreach (NationalPark nationalPark in Model.AllParks)
    {
        <div style=" display:grid; grid-template-columns: 1fr 5fr; grid-template-areas: 'photo info';  padding: 20px; ">
            <a asp-controller="home" asp-action="park" asp-route-id="@nationalPark">
                <img src="~/images/(@nationalPark.ParkCode).jpg" style="width:300px; padding: 20px; grid-area:photo;" />
            </a>
            <div grid-area:info>
                <p style=" margin-top: 20px; font-weight:bold; font-size:24px;">@nationalPark.ParkName</p>
                <p style=" margin-top: 20px; font-size:18px; ">@nationalPark.ParkDescription</p>

            </div>
        </div>

    }
















</section>