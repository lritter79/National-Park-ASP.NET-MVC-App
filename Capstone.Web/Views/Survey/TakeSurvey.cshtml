@model Capstone.Web.Models.SurveyResult

@{
    ViewData["Title"] = "TakeSurvey";
}

<h2>Take our survey to let us know which national park is your favorite</h2>

@* Use the forum post page as a guidleine to make the post for the survey *@

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TakeSurvey" asp-controller="survey" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label class="control-label">Select your favorite park</label>
                <select asp-for="ParkCode" asp-items="@Model.ParksMenu" class="form-control"></select>
                <span asp-validation-for="ParkCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> What's your email?</label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Which state are you in?</label>
                <select asp-for="State" asp-items="@Model.StatesList" class="form-control"></select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> How active are you?</label>
                <select asp-for="ActivityLevel" asp-items="@Model.Levels" class="form-control"></select>
                <span asp-validation-for="ActivityLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
